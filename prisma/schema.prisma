datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  parentId  String?
  parent    Message? @relation("Replies", fields: [parentId], references: [id])
  replies   Message[] @relation("Replies")
}